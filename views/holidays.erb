<form>
  month:
  <input name="month" type="number" value="<%= @month%>">
  year:
  <input name="year" type="number" value="<%= @year%>">
  day:
  <input name="day" type="number" value="<%= @day%>">
  <button type="submit">Show me holidays</button>
</form>

<% if @holidays.length < 1 %>
  <p>No Holidays on this day</p>

<% end %>

<% @holidays.each do |holiday| %>
  <p>
    <%= holiday['name'] %>
  </p>
<% end %>
